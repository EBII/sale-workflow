<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <record forcecreate="True" id="ir_cron_invoice_mail_white_label" model="ir.cron">
            <field name="name">Send Invoice Mail to White Label shops</field>
            <field eval="False" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
            <field eval="'white.label'" name="model"/>
            <field eval="'send_invoice_email_to_white_label_shop'" name="function"/>
            <field eval="'()'" name="args"/>
        </record>

        <!--Email template -->
        <record id="sale_shop_white_label_email_template" model="mail.template">
            <field name="name">White label Invoice Mail</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="model_id" ref="sale_white_label_base.model_white_label"/>
            <field name="email_from">Stores-Discount.com &lt;contact@stores-dicount.fr&gt;</field>
            <field name="subject">Your invoice Oliver's Store</field>
            <field name="email_to">${object.partner_id.email or 'S.Merlin@stores-discount.fr'}</field>
            <field name="email_recipients"></field>
            <field name="reply_to">Stores-Discount.com &lt;contact@stores-dicount.fr&gt;</field>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; "> 


 <p>Bonjour ${object.partner_id.name or ''},</p>

<p> Les factures des dernières commandes expédiées sont disponible en pièce jointe.</p>

  </div>
            ]]></field>
        </record>

    </data>

</openerp>
