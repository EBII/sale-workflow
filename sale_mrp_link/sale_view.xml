<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <act_window
            context="{'search_default_sale_order_id': [active_id]}"
            id="act_sale_order_manufacturing_open"
            name="Manufacturing Orders"
            view_id="mrp.mrp_production_tree_view"
            res_model="mrp.production"
            src_model="sale.order"/>

        <record id="view_order_form" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button name="%(action_view_manufacturing_order)d" string="See Manufacturing Orders" type="action" groups="base.group_user"/>
                </xpath>
            </field>
        </record>

        <record id="action_view_manufacturing_order" model="ir.actions.act_window">
            <field name="context">{'search_default_sale_order_id': [active_id]}</field>
            <field name="name">Manufacturing Orders</field>
            <field name="res_model">mrp.production</field>
            <field name="view_id" ref="mrp.mrp_production_tree_view"/>
        </record>

    </data>
</openerp>
