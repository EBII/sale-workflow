
<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

<record id="view_order_form" model="ir.ui.view">
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="priority" eval="2000"/>
    <field name="arch" type="xml">
        <field name="" position="after">
            <field name="pricelist_readonly"/>
            <field name="fiscal_readonly"/>
            <field name="journal_readonly"/>
        </field>
        <field name="pricelist_id" position="attributes">
            <attribute name="attrs">{'readonly': [('pricelist_readonly', '=', True)]}</attribute>
        </field>
        <field name="fiscal_position" position="attributes">
            <attribute name="attrs">{'readonly': [('fiscal_position_readonly', '=', True)]}</attribute>
        </field>
        <field name="journal_id" position="attributes">
            <attribute name="attrs">{'readonly': [('journal_readonly', '=', True)]}</attribute>
        </field>
    </field>
</record>
    </data>
</openerp>


