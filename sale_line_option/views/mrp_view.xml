<?xml version="1.0" encoding="UTF-8"?>
<odoo>

     <record id="view_bom_line_form" model="ir.ui.view">
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="after">
                <field name="opt_min_qty"/>
                <field name="opt_default_qty" />
                <field name="opt_max_qty"/>
            </xpath>
        </field>
    </record>

    <record id="view_mrp_bom_line_filter" model="ir.ui.view">
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp.view_mrp_bom_line_filter"/>
        <field name="arch" type="xml">
            <field name="bom_id" position="before">
                <field name="name" string="Component name"/>
            </field>
        </field>
    </record>

</odoo>
